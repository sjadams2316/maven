# Eli Trader Configuration

# ===================
# ALPACA (Stocks + Crypto)
# ===================
# Sign up at https://alpaca.markets
# Paper trading is enabled by default
ALPACA_API_KEY=your_alpaca_api_key
ALPACA_API_SECRET=your_alpaca_secret_key
ALPACA_PAPER=true

# ===================
# VANTA / BITTENSOR
# ===================
# Subscribe at https://request.taoshi.io
VANTA_API_KEY=your_vanta_api_key
VANTA_VALIDATOR_URL=https://validator-endpoint

# ===================
# OPTIONAL DATA SOURCES
# ===================
# Glassnode (on-chain data)
GLASSNODE_API_KEY=

# LunarCrush (social sentiment)
LUNARCRUSH_API_KEY=

# ===================
# TRADING PARAMETERS
# ===================
# Risk per trade (as decimal, 0.01 = 1%)
RISK_PER_TRADE=0.01

# Maximum total exposure (as decimal, 0.5 = 50%)
MAX_EXPOSURE=0.50

# Minimum confidence to take trade (as decimal)
MIN_CONFIDENCE=0.60
